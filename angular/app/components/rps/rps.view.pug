div(layout="row", layout-align="center center", flex="100")
    .md-whiteframe-z2(flex-xs="100")
        md-content.site-pad-left.site-pad-right(flex="", layout="column")
            div(layout="row", layout-wrap="", layout-align="center start")
                md-card(ng-repeat="throwOption in vm.throwOptions", ng-click="vm.runPvCGame(throwOption)")
                    img.site-image-width(src="{{ throwOption.img }}", width="150", height="150", title="{{ throwOption.name }}",alt="{{ throwOption.name }}")
            div(layout-align="center center", layout="row", ng-show="vm.throwOption1 && vm.throwOption2")
                h4 You chose: {{ vm.throwOption1 }}
                div(flex="")
                h4 Computer chose: {{ vm.throwOption2 }}
            div(layout-align="center center", layout="row", layout-padding="")
                h2 {{ vm.results }}
            md-divider
            .site-pad-top(layout-align="center center", layout="row")
                .md-subhead {{ "PLAYER_SCOREBOARD" | translate }}
            .site-pad-bottom(layout="column", layout-gt-xs="row", flex="100")
                div(ng-repeat="(scoreKey, scoreVal) in vm.score", flex="", layout="column", layout-align="center center")
                    .md-headline {{ scoreKey | capitalize }}: {{ scoreVal }}
            .site-pad-bottom(layout="column", layout-gt-xs="row")
                div(flex="")
                md-button.md-primary.md-raised(md-theme="buttons", ng-click="vm.runCvCGame()") {{ "AUTO_TURN" | translate }}
                md-button.md-accent.md-raised(md-theme="buttons", ng-click="vm.resetGame()") {{ "RESET_SCOREBOARD" | translate }}